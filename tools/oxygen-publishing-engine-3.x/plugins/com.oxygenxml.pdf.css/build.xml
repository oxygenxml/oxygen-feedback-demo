        <arg value="${dita.dir}" />
      
  		<arg value="-install-dir"/>
  		<arg value="${embedded.chemistry.installation.dir}"/>
  		
  		<arg value="-css"/>
        <arg value="${main.css.path}"/>
        <arg value="-in"/>
  	    <arg value="${dita.map.merged.post.processed}"/>
